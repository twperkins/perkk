<%= render 'shared/navbar' %>
<div class="current-user-id" id="<%=current_user.id%>"></div>

<div class="contain" data-controller="account">

  <div class="list-section owned" id="results2down" data-account-target="package">
    <h2 class="package-header text-vertical-left">your perks</h2>
    <% if @user_perks_all.blank? %>
      <div class="card-green small">
        <div class="card-infos">
          <h2>add perks here</h2>
        </div>
      </div>
    <% else %>
      <div class="card-green small">
        <div class="card-infos">
          <h2>add perks here</h2>
        </div>
      </div>
      <% @user_perks_all.each do |user_perk| %>
        <div class="card-green small"
            id=<%="#{user_perk.perk.id}-true-#{user_perk.id}"%>
            data-action="dragend->account#options"
            data-url="<%= remove_user_perk_path(user_perk) %>"
            style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path user_perk.perk.perk_pic.first.key %>')">
          <div class="card-infos">
            <h2><%= user_perk.perk.name %></h2>
            <p><%= user_perk.perk.token_cost %> tokens</p>
          </div>
        </div>
      <% end %>
    <% end %>
    <div class="button-card button-top-right"><%= link_to "✓", profile_path, class: "link-dark-blank" %></div>
    <div class="button-card-teal button-bottom-left"><%= link_to "♺", profile_path, class: "link-light-blank" %></div>
  </div>

  <div class="list-section range" id="results" data-account-target="list">
  <h2 class="package-header text-vertical-left green-text">choose perks</h2>
    <% @unowned_perks.each do |perk|%>
      <div class="card small"
           id=<%="#{perk.id}-false"%>
           data-action="dragend->account#account"
           data-url="<%= perk_user_perks_path(perk) %>"
           style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path perk.perk_pic.first.key %>')">
        <div class="card-infos">
          <h2><%= perk.name %></h2>
          <p><%= perk.token_cost %> tokens</p>
          <%# add a new class and customise button %>
            <%= link_to "", perk_favourites_path(perk), class: "card-link" %>
            <h4 class="button-card-teal button-top-right"><%= link_to "♡", perk_favourites_path(perk), class: "link-light-blank high-z-index", method: :post, remote: true %></h4>
        </div>
      </div>
    <% end %>
  </div>

</div>

<div>
  <%= render 'shared/profile' %>
</div>

