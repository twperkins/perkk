<%= render 'shared/navbar_dark' %>
<div class="contain">
  <div class="profile-grid">
    <div class='profile-first'>
      <div class="notifications-block">
        <h1>notifications </h1>
        <% if @user_perks.blank? %>
          <h4>no new notifications at the moment</h4>
        <% else %>
        <h5> > perkk: welcome back, <%= current_user.name %>!</h5>
        <h5> > <%= @user_perks[2].merchants.downcase %>: you recently favourited <%= @user_perks[2].name.downcase %>, add it to your package today for only <%= @user_perks[2].token_cost %> tokens! </h5>
        <h5> > <%= @user_perks[1].merchants.downcase %>: why not try upgrading your perkk with us? <h5>
        <h5> > <%= @user_perks[3].merchants.downcase %>: any questions ahead of your booking? please email us: hello@<%= @user_perks[3].merchants.downcase %>.co.uk</h5>
        <h5> > <%= @user_perks[0].merchants.downcase %>: don't forget to review your perkk experience with us!</h5>
        <% end %>
      </div>
      <br>
      <br>
      <div class="cards-profile" >
        <h3 class="text-vertical-left">recommended perks</h3>
        <% @recommended_perks.each do |perk|%>
          <div class="card-green" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path perk.perk_pic.first.key %>')">
            <%= link_to "", perk_path(perk), class: "card-link" %>
            <% if current_user.favourites.include?(perk) %>
              <%= link_to favourite_path(Favourite.find(params[:id])), class: "link-light-blank button-top-right", method: :delete, remote: true do %>
                <h6 class="button-card-teal high-z-index">♥︎</h6>
              <% end %>
            <% else %>
             <%= link_to perk_favourites_path(perk), class: "link-light-blank button-top-right", method: :post, remote: true  do %>
                <h6 class="button-card-teal high-z-index">♡</h6>
              <% end %>
            <% end %>
            <div class="card-infos">
              <h2><%= perk.name %></h2>
              <p><%= perk.merchants %></p>
            </div>
          </div>
        <% end %>
      </div>
    </div>

    <div class='profile-second'>
      <h2> Perk categories </h2>
        <% @perk_category.each do |category| %>
          <%= link_to perk_path(Perk.find_by(category: category)) do %>
            <h3><%= category %></h3>
          <% end  %>
        <% end  %>
      </div>
    </div>
  </div>
</div>


<div>
  <%= render 'shared/profile' %>
</div>
