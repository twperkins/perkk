<%= render 'shared/navbar_dark' %>
<div class="contain">
  <div class="profile-grid">
    <div class='profile-first'>
      <div class="notifications-block">
        <h1>notifications </h1>
        <h5> > turo: have two weeks for free on us when you renew <h5>
        <h5> > ellie smith: any questions ahead of the update?</h5>
        <h5> > perkk: less than two weeks to update your perks</h5>
        <h5> > netflix: latest programmes released exclusive to perkk customers</h5>
        <h5> > le wagon: we’ve increased your tokens for the next year!</h5>
      </div>
      <br>
      <br>
      <div class="cards-profile">
        <h3 class="text-vertical-left">recommended perks</h3>
        <% @recommended_perks.each do |perk|%>
          <div class="card-green" data-controller="flipcard" data-flipcard-target="flipcard">
            <h6 class="button-card-teal button-bottom-right high-z-index button-flip" data-flipcard-target="flipcard-button" data-action="click->flipcard#toggleFlipcard">i</h6>
            <div class="front" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path perk.perk_pic.first.key %>')">
              <%= link_to "", perk_path(perk), class: "card-link" %>

              <%# <% if Perk.find(perk) %>
                <%= link_to perk_favourites_path(perk), class: "link-light-blank button-top-right", method: :post do %>
                  <h6 class="button-card-teal high-z-index">♡</h6>
                <% end %>
              <%# <% else %>
                <%= link_to perk_favourites_path(perk), class: "link-light-blank button-top-right", method: :post do %>
                  <h6 class="button-card-teal high-z-index">♥︎</h6>
                <% end %>
              <%# <% end %>

              <div class="card-infos">
                <h2><%= perk.name %></h2>
                <p><%= perk.merchants %></p>
              </div>
            </div>

            <div class="back" data-flipcard-target="flipback">
              <%= link_to "", perk_path(perk), class: "card-link" %>

              <%# <% if Perk.find(perk) %>
                <%= link_to perk_favourites_path(perk), class: "link-light-blank button-top-left", method: :post do %>
                  <h6 class="button-card-teal high-z-index">♡</h6>
                <% end %>
              <%# <% else %>
              <%= link_to perk_favourites_path(perk), class: "link-light-blank button-top-left", method: :post do %>
                  <h6 class="button-card-teal high-z-index">♥︎</h6>
                <% end %>
              <%# <% end %>

              <div class="card-infos">
                <h3><%= perk.name %></h3>
                <h5>Details</h5>
                <p><%= perk.description %></p>
                <h4><%= perk.token_cost %> tokens</h4>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>

    <div class='profile-second'>
      <h2> Perk categories </h2>
        <% @perk_category.each do |category| %>
          <%= link_to perk_path(Perk.find_by(category: category)) do %>
            <h3><%= category %></h3>
          <% end  %>
        <% end  %>
      </div>
    </div>
  </div>
</div>


<div>
  <%= render 'shared/profile' %>
</div>
